<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/scan_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_image_vector"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="24dp"
        android:tint="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Image for Scam"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a chat screenshot to detect spam."
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textColor="?android:attr/textColorSecondary" />

    <Button
        android:id="@+id/btn_upload_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Screenshot" />

</LinearLayout>
